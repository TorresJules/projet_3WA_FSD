{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
<div class="inner bo">

    <h1>Item</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ item.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ item.name }}</td>
        </tr>
        <tr>
            <th>Ingr√©dients</th>
            <td>
                <ul>
                    {% for ingredient in ingredients %}
                        <li>{{ ingredient.name }}</li>
                    {% endfor%}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ item.price }}</td>
        </tr>
        {% if item.imageFilename is defined and item.imageFilename is not empty %}
            <tr class="form-group">
                <th>Image actuelle:</th>
                <td><img class="show-image" src="{{ asset('uploads/images/' ~ item.imageFilename) }}" alt="Image actuelle"></td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_item_index') }}">back to list</a>

    <a href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>

    {{ include('item/_delete_form.html.twig') }}
</div>
{% endblock %}
